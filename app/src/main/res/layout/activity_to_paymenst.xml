<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toPaymenst">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/krem"
        tools:context=".PaymentActivity">


        <ImageView
            android:id="@+id/ivPaymentIcon"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="315dp"
            android:contentDescription="Payment Icon"
            android:src="@drawable/baseline_payment_24" />

        <TextView
            android:id="@+id/tvPaymentDetails"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="95dp"
            android:text="Payment Details"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etExpiryDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_input_24"
            android:hint="Expiry Date"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCVV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:hint="CVV"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMakePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="658dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            android:padding="16dp"
            android:text="Make Payment"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uploadFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="591dp"
            android:layout_marginEnd="60dp"
            android:background="@color/black"
            android:padding="16dp"
            android:text="Upload File"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvPaymentDetails2"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="200dp"
            android:text="Payment Type:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/methodPay"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="136dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/paymenDraw"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="0dp"
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>