<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">


    <ImageView
        android:id="@+id/ivPaymentIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/baseline_payment_24"
        android:contentDescription="Payment Icon" />

    <TextView
        android:id="@+id/tvPaymentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPaymentIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Payment Details"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPaymentDetails"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Card Number"
        android:inputType="number"
        android:padding="12dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etExpiryDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCardNumber"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:hint="Expiry Date"
        android:inputType="number"
        android:background="@drawable/baseline_input_24"
        android:padding="12dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etCVV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCardNumber"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:hint="CVV"
        android:inputType="number"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnMakePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etExpiryDate"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Make Payment"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

</RelativeLayout>