<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/black">

    </LinearLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imagelabourer"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/logoaps"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_toEndOf="@id/imagelabourer"
            android:textStyle="bold"
            android:id="@+id/namateamsinfos"
            android:text="Name">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:gravity="center"
            android:textSize="15dp"
            android:layout_below="@id/namateamsinfos"
            android:layout_toEndOf="@id/imagelabourer"
            android:textStyle="bold"
            android:id="@+id/addressinfos"
            android:text="Address">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
           android:layout_toEndOf="@id/imagelabourer"
            android:gravity="center"
            android:layout_below="@id/addressinfos"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/priceinfos"
            android:text="harga">
        </TextView>

</RelativeLayout>